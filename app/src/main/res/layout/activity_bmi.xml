<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="org.lukasowy.fitnesscalculators.BMIActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/titleViewBMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Body Mass Index"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex:"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toLeftOf="@+id/radioGroup"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroup"
        app:layout_constraintHorizontal_bias="0.563"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textSize="30sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/inputWeight"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="26dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textSize="30sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/inputHeight"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="32dp" />

    <Button
        android:id="@+id/btnCalculate"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:text="Calculate"
        android:shadowColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.065"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/inputWeight"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:backgroundTint="@color/colorWhite"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:shadowColor="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@color/colorWhite"
        android:textColorLink="@color/colorWhite"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginStart="23dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/inputHeight"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="43dp"
        android:backgroundTint="@color/colorWhite"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@color/colorWhite"
        android:textColorLink="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/btnCalculate"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/inputWeight"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="kg"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintLeft_toRightOf="@+id/inputWeight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/inputWeight"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="52dp"
        android:text="cm"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/inputHeight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintBottom_toBottomOf="@+id/inputHeight"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:layout_marginRight="39dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/inputWeight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.903">

        <RadioButton
            android:id="@+id/radioBtnFemale"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="@android:color/white"
            android:textColorLink="@color/colorWhite"
            android:textSize="18sp"
            android:buttonTint="@color/colorWhite"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="88dp" />

        <RadioButton
            android:id="@+id/radioBtnMale"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:buttonTint="@color/colorWhite"
            tools:layout_editor_absoluteX="259dp"
            tools:layout_editor_absoluteY="88dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Result"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalculate" />


</android.support.constraint.ConstraintLayout>
